<html>
    <head>
        <title>Node.js Project Structure</title>
        
        <!-- Styles -->
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/home.css"/>
    </head>
    <body>
        <header>
            <!-- Including the navbar partial -->
            <%- include('partials/navbar.ejs') %>
        </header>
        <div class="container my-5">
            <!-- Hero Section -->
            <section class="hero text-center my-5">
                <h2 class="display-4">Featured Experience</h2>
                <p class="lead">Experience the thrill of skydiving over the Grand Canyon!</p>
                <button class="btn btn-primary">Book Now</button>
            </section>
            
            <!-- Browse Experiences -->
            <section class="browse-experiences my-5">
                <h2 class="mb-4">Browse Experiences</h2>
                 <!-- Including carousel -->
                 <%- include('experiences.ejs') %>    
            </section>

            <!-- Booking Form -->
            <section class="booking-form my-5">
                <h2 class="mb-4">Book Your Experience</h2>
                <form action="/submit-booking" method="post" class="form-group">
                    <label for="experience" class="form-label">Choose an experience:</label>
                    <select name="experience" id="experience" class="form-control mb-3">
                        
                    </select>
                    <label for="date" class="form-label">Choose a date:</label>
                    <input type="date" name="date" id="date" class="form-control mb-3">
                    <input type="submit" value="Book Now" class="btn btn-success">
                </form>
            </section>

            <!-- Testimonials -->
            <section class="testimonials my-5">
                <h2 class="mb-4">What Our Clients Say</h2>
                <%- include('partials/home/testimonials.ejs') %>
            </section>

            <!-- Contact Section -->
            <section class="contact my-5">
                <h2 class="mb-4">Contact Us</h2>
                <p>If you have any questions or need assistance, reach out to us!</p>
                <form action="/submit-contact" method="post" class="form-group">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" name="name" id="name" class="form-control mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" name="email" id="email" class="form-control mb-3">
                    <label for="message" class="form-label">Message:</label>
                    <textarea name="message" id="message" class="form-control mb-3"></textarea>
                    <input type="submit" value="Send Message" class="btn btn-primary">
                </form>
            </section>
        </div>

        <!-- Including the footer partial -->
        <%- include('partials/footer.ejs') %>

        <!-- Scripts -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="/js/home.js"></script>
    </body>
</html>